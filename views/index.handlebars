<main>
  {{!-- Trending --}}
  <div class="gridx">
    <div class="cell title" id="trending">
      TRENDING
    </div>

    {{#if trending.hasResults}}
    
    <div class="swiper-container">
      <div class="swiper-wrapper">
      {{#each trending.results}}
        <img class="poster swiper-slide shad" data-id="{{id}}"src="https://image.tmdb.org/t/p/original{{poster_path}}" alt="{{title}}">
      {{/each}}
      </div>
    </div>
    {{else}}
    Error Loading Trending
    {{/if}}
    <br>

{{!--Top Rated --}}
<div class="gridx">
    <div class="cell title" id="topRated">
      TOP RATED
    </div>
    
    {{#if topRated.hasResults}}
    
    <div class="swiper-container">
      <div class="swiper-wrapper">
      {{#each topRated.results}}
        <img class="poster swiper-slide shad" data-id="{{id}}"src="https://image.tmdb.org/t/p/original{{poster_path}}" alt="{{title}}">
      {{/each}}
      </div>
    </div>
    {{else}}
    Error Loading The Top Rated
    {{/if}}
    <br>

{{!--Now Playing --}}
<div class="gridx">
    <div class="cell title" id="nowPlaying">
     NOW PLAYING
    </div>
    
    {{#if nowPlaying.hasResults}}
    
    <div class="swiper-container">
      <div class="swiper-wrapper">
      {{#each nowPlaying.results}}
        <img class="poster swiper-slide shad" data-id="{{id}}"src="https://image.tmdb.org/t/p/original{{poster_path}}" alt="{{title}}">
      {{/each}}
      </div>
    </div>
    {{else}}
    Error Loading Now Playing
    {{/if}}
    <br>

{{!-- Up Coming --}}
<div class="gridx">
    <div class="cell title" id="upComing">
      UPCOMING
    </div>
    {{#if upcoming.hasResults}}
    
    <div class="swiper-container">
      <div class="swiper-wrapper">
        {{#each upcoming.results}}
        <img class="poster swiper-slide shad" data-id="{{id}}" src="https://image.tmdb.org/t/p/original{{poster_path}}"
          alt="{{title}}">
        {{/each}}
      </div>
    </div>
    {{else}}
    Error loading trending
    {{/if}}

</main>


<script>
  //<a href="/movie/{{id}}">
  $(".poster").click("on", function(){
    window.location.href = "/movie/" + $(this).attr("data-id");
  })
</script>